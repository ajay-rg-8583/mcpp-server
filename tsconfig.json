{
  "compilerOptions": {
    "target": "ES2020", // Or a newer version like ES2022
    "module": "NodeNext", // Crucial for ES Modules with Node.js
    "moduleResolution": "NodeNext", // Works well with NodeNext module system
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "./dist", // Where to output JavaScript files for the 'build' script
    "rootDir": "./src", // Specify the root directory of input files
    "resolveJsonModule": true, // Allows importing JSON files
    "sourceMap": true, // Generate source maps for debugging
    "inlineSourceMap": false, // Keep source maps in separate files
    "inlineSources": false // Don't inline source content in source maps
  },
  "include": ["src/**/*.ts"], // Which files to include in compilation
  "exclude": ["node_modules", "**/*.spec.ts", "src/mcpp-core/**/*"] // Exclude mcpp-core from root build
}
